<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <filter>
        <filter-name>SiteHitCounter</filter-name>
        <filter-class>filter.SiteHitCounter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SiteHitCounter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>Event Servlet</servlet-name>
        <servlet-class>servlet.EventServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Event Price</servlet-name>
        <servlet-class>servlet.Event_PriceServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Cust_Event Servlet</servlet-name>
        <servlet-class>servlet.Cust_EventServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StatisticServlet</servlet-name>
        <servlet-class>servlet.StatisticServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewServlet</servlet-name>
        <servlet-class>servlet.NewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerServlet</servlet-name>
        <servlet-class>servlet.CustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Event Servlet</servlet-name>
        <url-pattern>/JSPEventCreating</url-pattern>
        <url-pattern>/EventCreating</url-pattern>
        <url-pattern>/EventUpdating</url-pattern>
        <url-pattern>/EventDeleting</url-pattern>
        <url-pattern>/JSPEventSelecting</url-pattern>
        <url-pattern>/JSPEventNext</url-pattern>
        <url-pattern>/JSPEventPrev</url-pattern>
        <url-pattern>/JSPEventDetail</url-pattern>
        <url-pattern>/JSPEventDetailTicket</url-pattern>
        <url-pattern>/JSPEventDetailParticipants</url-pattern>
        <url-pattern>/EventFilter.guitar</url-pattern>
        <url-pattern>/ThrowLogoAway.oneandoneistwo</url-pattern>
        <url-pattern>/JSPEventInfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Event Price</servlet-name>
        <url-pattern>/JSPEvent_Price</url-pattern>
        <url-pattern>/Event_PriceInserting</url-pattern>
        <url-pattern>/Event_PriceDeleting</url-pattern>
        <url-pattern>/Event_PriceUpdating</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Cust_Event Servlet</servlet-name>
        <url-pattern>/JSPParticipantsEditing</url-pattern>
        <url-pattern>/ParticipantEditing</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StatisticServlet</servlet-name>
        <url-pattern>/JSPSumPriceEveryMonthOfYear</url-pattern>
        <url-pattern>/JSPPrevSumPriceEveryMonthOfYear</url-pattern>
        <url-pattern>/JSPNextSumPriceEveryMonthOfYear</url-pattern>
        <url-pattern>/SelectAmountClassifyEventsMonth</url-pattern>
        <url-pattern>/SelectClassifyEventsMonth</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewServlet</servlet-name>
        <url-pattern>/NewServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerServlet</servlet-name>
        <url-pattern>/Customer</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <url-pattern>/Login</url-pattern>
<!--    <welcome-file-list>
        <welcome-file>/WEB-INF/admin/login.jsp</welcome-file>
    </welcome-file-list>-->
</web-app>
